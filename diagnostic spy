-- === Wide Remote Spy ===
-- Jalankan terpisah, jangan dicampur dengan script utama.
-- Tujuan: deteksi remote mana yang dipakai saat reload manual.

for _,v in ipairs(game:GetDescendants()) do
    if v:IsA("RemoteEvent") then
        local old; old = hookfunction(v.FireServer, function(self, ...)
            local args = {...}
            warn("[Spy-RemoteEvent]", self:GetFullName())
            for i,a in ipairs(args) do
                warn("   Arg["..i.."] =", a, typeof(a))
            end
            return old(self, ...)
        end)
    elseif v:IsA("RemoteFunction") then
        local old; old = hookfunction(v.InvokeServer, function(self, ...)
            local args = {...}
            warn("[Spy-RemoteFunction]", self:GetFullName())
            for i,a in ipairs(args) do
                warn("   Arg["..i.."] =", a, typeof(a))
            end
            return old(self, ...)
        end)
    end
end

warn("âœ… Remote Spy aktif. Sekarang lakukan reload manual, lalu cek Developer Console (F9).")
