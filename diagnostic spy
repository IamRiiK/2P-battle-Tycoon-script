-- === Ammo Value Spy ===
local plr = game.Players.LocalPlayer

-- Cari semua IntValue / NumberValue di character dan backpack
local function scan()
    for _,v in ipairs(plr.Character:GetDescendants()) do
        if v:IsA("IntValue") or v:IsA("NumberValue") then
            v:GetPropertyChangedSignal("Value"):Connect(function()
                print("[AmmoSpy]", v:GetFullName(), "=", v.Value)
            end)
        end
    end
    for _,v in ipairs(plr.Backpack:GetDescendants()) do
        if v:IsA("IntValue") or v:IsA("NumberValue") then
            v:GetPropertyChangedSignal("Value"):Connect(function()
                print("[AmmoSpy]", v:GetFullName(), "=", v.Value)
            end)
        end
    end
end

scan()
print("âœ… AmmoSpy aktif, tembak & reload untuk lihat perubahan value.")
